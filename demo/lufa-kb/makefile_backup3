# --------------------------------------
#         LUFA Project Makefile.
# --------------------------------------

# Run "make help" for target help.

MCU          = atmega32u4
ARCH         = AVR8
BOARD        = PROMICRO
F_CPU        = 16000000
F_USB        = $(F_CPU)
OPTIMIZATION = s
# TARGET		 = LEDTest
TARGET       = Keyboard/Keyboard
SRC          = $(TARGET).c Descriptors.c $(LUFA_SRC_USB) $(LUFA_SRC_USBCLASS)
LUFA_PATH    = LUFA
CC_FLAGS     = -DUSE_LUFA_CONFIG_HEADER -IConfig/
C_FLAGS      += -ILUFA -IKeyboard/Config -ILUFA/Drivers/USB
C_FLAGS      += -ILUFA -IKeyboard/Config -ILUFA/Drivers/USB -Wall -Werror
LD_FLAGS     =

# Default target
all:

preprocess:
	avr-gcc -E $(C_FLAGS) -mmcu=$(MCU) -I$(LUFA_PATH) Keyboard/Keyboard.c -o Keyboard.i


# Include LUFA-specific DMBS extension modules
DMBS_LUFA_PATH ?= $(LUFA_PATH)/Build/LUFA
include $(DMBS_LUFA_PATH)/lufa-sources.mk
include $(DMBS_LUFA_PATH)/lufa-gcc.mk

# Include common DMBS build system modules
DMBS_PATH      ?= $(LUFA_PATH)/Build/DMBS/DMBS
include $(DMBS_PATH)/core.mk
include $(DMBS_PATH)/cppcheck.mk
include $(DMBS_PATH)/doxygen.mk
include $(DMBS_PATH)/dfu.mk
include $(DMBS_PATH)/gcc.mk
include $(DMBS_PATH)/hid.mk
include $(DMBS_PATH)/avrdude.mk
include $(DMBS_PATH)/atprogram.mk


